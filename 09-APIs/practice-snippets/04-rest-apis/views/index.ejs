<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Secrets API Manager</title>

  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

  <div class="container py-5">

    <div class="card shadow-lg rounded-4">
      <div class="card-body p-4">

        <h1 class="text-center mb-4">üîê Secrets API Manager</h1>

        <!-- Response Area -->
        <div class="mb-4">
          <div class="bg-dark text-light p-3 rounded overflow-auto" style="max-height: 300px;">
            <pre class="mb-0"><%= content %></pre>
          </div>
        </div>
        

        <!-- Form -->
        <form method="post">

          <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" name="id" placeholder="Enter ID">
          </div>

          <div class="mb-3">
            <label class="form-label">Secret</label>
            <input type="text" class="form-control" name="secret" placeholder="Enter secret">
          </div>

          <div class="mb-4">
            <label class="form-label">Score</label>
            <input type="number" class="form-control" name="score" placeholder="Enter score">
          </div>

          <!-- Buttons -->
          <div class="d-flex flex-wrap gap-2 justify-content-center">

            <button class="btn btn-success" formaction="/get-secret">GET</button>

            <button class="btn btn-primary" formaction="/post-secret">POST</button>

            <button class="btn btn-warning text-dark" formaction="/patch-secret">PATCH</button>

            <button class="btn btn-info text-white" formaction="/put-secret">PUT</button>

            <button class="btn btn-danger" formaction="/delete-secret">DELETE</button>

          </div>

        </form>

      </div>
    </div>

  </div>

</body>
</html>
